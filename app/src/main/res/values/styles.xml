<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme3" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="srcCompat">@drawable/ok_icon</item>
    </style>

    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Adjust radius here -->
    </style>

    <style name="AppTheme4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomButtonOrange" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">30sp</item>
    </style>

    <style name="CustomButtonOrangeNoHeight" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonGreen</item>
        <item name="cornerRadius">30sp</item>
    </style>

    <style name="CustomButtonPinOrangeNoHeight" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">30sp</item>
    </style>

    <style name="CustomButtonOrangeSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonGreen</item>
        <item name="cornerRadius">18sp</item>
        <item name="android:height">@dimen/button_orange_height</item>
    </style>

    <style name="AppTheme.EditTextTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/underlineGray</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.EditTextAmountTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlNormal">@color/underlineGray</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <style name="suffix" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="ButtonSignOut" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">6sp</item>
    </style>

    <style name="ButtonTransaction" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">30sp</item>
        <item name="strokeColor">@color/buttonGreen</item>
    </style>

    <style name="ButtonPinForgot" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">30sp</item>
        <item name="strokeColor">@color/pinForgotLine</item>
    </style>

    <style name="ButtonTransactionRed" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/new_red</item>
        <item name="cornerRadius">30sp</item>
        <item name="strokeColor">@color/new_red</item>
    </style>

    <style name="ButtonTransactionDisabled" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">30sp</item>
        <item name="strokeColor">@color/greyLine</item>
    </style>

    <style name="ButtonTransactionDisabledRed" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/transaction_red</item>
        <item name="cornerRadius">30sp</item>
        <item name="strokeColor">@color/transaction_red</item>
    </style>

    <style name="DateEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/global_grey</item>
        <item name="android:colorControlActivated">@color/global_grey</item>
        <item name="android:textColorHighlight">@color/global_grey</item>
    </style>
    
    <style name="RoundInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/HintText</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:fontFamily">@font/ss3regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="OutlinedRoundedBoxAmount" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="background">@color/amountBackground</item>
    </style>


    <style name="TipButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/btn_border</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="TipButton.Selected" parent="TipButton">
        <item name="android:background">@drawable/btn_selected</item>
        <item name="android:backgroundTint">@null</item>
    </style>



    <style name="ButtonNoInstallment" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/suffixDarkMode</item>
        <item name="cornerRadius">6sp</item>
    </style>


    <style name="CutCornersCard">
        <item name="cornerFamily">cut</item>    <!-- straight cut corners -->
        <item name="cornerSize">16dp</item>     <!-- depth of cut -->
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>