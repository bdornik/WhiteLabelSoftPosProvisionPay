<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEFF6"
        tools:context=".activities.ProfileDetailsActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_back"
            app:tint="@color/colorPrimary"
            android:tint="@color/colorPrimary"
            android:backgroundTint="@color/backgroundAmount"
            app:fabCustomSize="45dp"
            app:maxImageSize="16dp"
            android:layout_marginStart="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin"
            app:borderWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/labelProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/back"
            android:text="@string/label_profile"
            android:layout_marginEnd="@dimen/profile_margin"
            android:fontFamily="@font/ss3black"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textColor="@color/global_grey"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_big"
            app:cardCornerRadius="32dp"
            app:layout_constraintTop_toBottomOf="@+id/labelProfile">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/userIdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/label_terminal_name"
                    android:textSize="18sp"
                    android:fontFamily="@font/ss3regular"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_big"/>

                <TextView
                    android:id="@+id/userIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userIdLabel"
                    android:textSize="26sp"
                    android:fontFamily="@font/ss3black"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginStart="@dimen/margin_big"/>

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/global_grey"
                    android:layout_marginTop="50dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/userIdValue"/>

                <TextView
                    android:id="@+id/addressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separator"
                    android:text="@string/label_address_profile"
                    android:textSize="14sp"
                    android:fontFamily="@font/ss3regular"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginTop="@dimen/margin_top_profile_details_label"/>

                <TextView
                    android:id="@+id/addressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addressLabel"
                    android:textSize="16sp"
                    android:fontFamily="@font/ss3bold"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/margin_big"
                    />

                <TextView
                    android:id="@+id/cityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addressValue"
                    android:text="@string/label_city"
                    android:textSize="14sp"
                    android:fontFamily="@font/ss3regular"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginTop="@dimen/margin_top_profile_details_label"/>

                <TextView
                    android:id="@+id/cityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cityLabel"
                    android:textSize="16sp"
                    android:fontFamily="@font/ss3bold"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/margin_big"/>

                <TextView
                    android:id="@+id/emailLAbel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cityValue"
                    android:text="@string/label_terminal_id"
                    android:textSize="14sp"
                    android:fontFamily="@font/ss3regular"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginTop="@dimen/margin_top_profile_details_label"/>

                <TextView
                    android:id="@+id/terminalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emailLAbel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="16sp"
                    android:fontFamily="@font/ss3bold"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginBottom="@dimen/margin"/>

                <TextView
                    android:id="@+id/ipsTerminalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/terminalValue"
                    android:text="@string/label_ips_terminal_id"
                    android:textSize="@dimen/font_value_transaction"
                    android:visibility="gone"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bigLabelBlack"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginTop="@dimen/margin_top_profile_details_label"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>