<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundAmount"
        tools:context=".activities.TrafficActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_back"
            app:tint="@color/colorPrimary"
            android:tint="@color/colorPrimary"
            android:backgroundTint="@color/backgroundAmount"
            app:fabCustomSize="45dp"
            app:maxImageSize="16dp"
            android:layout_marginStart="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin"
            app:borderWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/labelTraffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/back"
            android:text="@string/label_traffic"
            android:fontFamily="@font/ss3black"
            android:textSize="22sp"
            android:textColor="@color/global_grey"
            android:layout_marginStart="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/emptyContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_no_results"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_big"
                android:text="@string/no_results_header"
                android:fontFamily="@font/ss3bold"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_big"
                android:text="@string/no_results_body"
                android:fontFamily="@font/ss3regular"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_big"
                android:layout_marginEnd="@dimen/margin_big"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/text_black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintBottom_toTopOf="@id/btnReport"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin_default"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            android:fontFamily="@font/ss3regular"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/period"
            android:layout_marginStart="@dimen/margin_default"
            android:text="@string/button_generate_report"
            android:textAlignment="center"
            android:textSize="@dimen/font_value_transaction"
            android:visibility="gone"
            android:fontFamily="@font/cocoregular"
            style="@style/CustomButtonOrange"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_big"
            app:tint="@color/white"
            android:tint="@color/white"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintRight_toRightOf="parent"
            app:fabCustomSize="45dp"
            app:maxImageSize="20dp"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/icon_filter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/period"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scrollbars="vertical"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:text="@string/label_share_history"
            android:textSize="18sp"
            android:textAlignment="center"
            android:visibility="gone"
            android:fontFamily="@font/cocoregular"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/period"
            app:layout_constraintEnd_toStartOf="@id/btnFilter"
            style="@style/CustomButtonOrangeSmall"/>

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spinner"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="@dimen/margin_default"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>