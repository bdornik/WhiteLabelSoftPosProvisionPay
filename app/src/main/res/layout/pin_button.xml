<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pinButton"
        android:layout_width="@dimen/pin_button_size"
        android:layout_height="@dimen/pin_button_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/pin_button_corner_radius"
        android:layout_margin="@dimen/pin_button_margin"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:fontFamily="@font/ss3semibold"
        android:textSize="37sp"
        android:textColor="@color/text_black"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:elevation="@dimen/pin_button_elevation">
    </com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>