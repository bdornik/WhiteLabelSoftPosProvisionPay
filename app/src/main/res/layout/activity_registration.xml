<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/backgroundAmount"
        tools:context=".activities.RegistrationActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_back"
            app:tint="@color/colorPrimary"
            android:tint="@color/colorPrimary"
            android:backgroundTint="@color/backgroundAmount"
            app:fabCustomSize="45dp"
            app:maxImageSize="16dp"
            android:layout_marginStart="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin"
            app:borderWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/labelRegistration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ss3black"
            android:gravity="center_horizontal"
            android:text="@string/label_registration"
            android:textColor="@color/global_grey"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintVertical_bias="0.312" />


        <View
            android:id="@+id/health_check_led"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/circle_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginBottom="@dimen/margin_amount_top"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/app_scan_qr_code_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="30dp"
                android:elevation="10dp"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/app_activate_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_big"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_qr" />

                    <TextView
                        android:id="@+id/app_activate_logo_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/qr_code_label"
                        android:layout_centerVertical="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:fontFamily="@font/ss3bold"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginEnd="@dimen/margin_default"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_user_id"
                app:expandedHintEnabled="false"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:boxBackgroundColor="@color/white"
                android:layout_marginTop="@dimen/margin_big"
                style="@style/RoundInput">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userIdValue"
                    android:layout_width="match_parent"
                    android:hint="@string/user_id_hint"
                    android:fontFamily="@font/ss3bold"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_code_registration"
                    android:textColor="@color/text_black"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColorHint="@color/global_grey"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_activation_code"
                app:expandedHintEnabled="false"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:boxBackgroundColor="@color/white"
                android:layout_marginTop="@dimen/margin_amount_top"
                style="@style/RoundInput">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pinCode"
                    android:layout_width="match_parent"
                    android:hint="@string/activation_code_hint"
                    android:fontFamily="@font/ss3bold"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_code_registration"
                    android:textColor="@color/text_black"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/global_grey"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/warningMessageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/labelCode"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/wrong_format_userid"
                android:textColor="@color/globalOrange"
                android:textSize="@dimen/font_label_transaction"
                android:visibility="gone"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default"/>

            <TextView
                android:id="@+id/warningMessageCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                android:text="@string/wrong_format_code"
                android:textColor="@color/globalOrange"
                android:textSize="@dimen/font_label_transaction"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </LinearLayout>


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/checkboxLink"
            app:layout_constraintBottom_toBottomOf="@id/checkboxLink"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:fontFamily="@font/cocoregular"
            android:buttonTint="@color/colorPrimary"
            android:textSize="14sp"
            android:textColor="@color/global_grey"
            android:text="@string/register_checkbox"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/checkboxLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/proceed"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="@dimen/margin_default"
            android:gravity="center_vertical"
            android:fontFamily="@font/cocoregular"
            android:textSize="14sp"
            android:textColor="@color/dark_blue"
            android:text="@string/register_checkbox_2"
            android:layout_marginEnd="@dimen/margin_default"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:text="@string/button_become_user"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/cocobold"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/CustomButtonOrangeNoHeight"/>

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spinner"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>