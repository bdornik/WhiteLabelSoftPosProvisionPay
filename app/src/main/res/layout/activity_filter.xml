<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundAmount"

            tools:context=".activities.FilterActivity">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_back"
                app:tint="@color/colorPrimary"
                android:tint="@color/colorPrimary"
                android:backgroundTint="@color/backgroundAmount"
                app:fabCustomSize="45dp"
                app:maxImageSize="16dp"
                android:layout_marginStart="@dimen/margin_big"
                android:layout_marginTop="@dimen/margin"
                app:borderWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/clearFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                app:tint="@color/new_red"
                android:tint="@color/white"
                android:backgroundTint="@color/backgroundAmount"
                app:layout_constraintTop_toTopOf="@id/back"
                app:layout_constraintBottom_toBottomOf="@id/back"
                app:layout_constraintRight_toRightOf="parent"
                app:fabCustomSize="45dp"
                app:maxImageSize="20dp"
                app:borderWidth="0dp"
                app:srcCompat="@drawable/icon_filter_set" />

            <TextView
                android:id="@+id/labelTraffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/back"
                android:text="@string/label_filter"
                android:fontFamily="@font/ss3black"
                android:textSize="22sp"
                android:textColor="@color/global_grey"
                android:layout_marginStart="@dimen/margin_default"
                app:layout_constraintBottom_toBottomOf="@id/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/iconClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:visibility="gone"
                android:src="@drawable/icon_x"/>

            <ScrollView
                android:id="@+id/filterLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/labelTraffic"
                android:layout_marginTop="@dimen/margin_big">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/labelDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/label_filter_date"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/ss3bold"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_default" />

                    <ImageView
                        android:id="@+id/arrowDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/labelDate"
                        android:padding="@dimen/margin_default"
                        android:visibility="gone"
                        android:src="@drawable/icon_arrow"/>

                    <LinearLayout
                        android:id="@+id/layoutDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@id/labelDate"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginEnd="@dimen/margin_default">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/fromContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/rounded_filter"
                                android:orientation="horizontal"
                                >
                                <EditText
                                    android:id="@+id/editFrom"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black"
                                    android:textSize="16sp"
                                    android:background="@null"
                                    android:hint="@string/label_from"
                                    android:focusableInTouchMode="false"
                                    android:layout_margin="@dimen/margin"
                                    android:fontFamily="@font/ss3regular"
                                    android:layout_gravity="center"
                                    android:theme="@style/DateEditText"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/icon"
                                    android:inputType="date"
                                    />

                                <ImageView
                                    android:id="@+id/icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:src="@drawable/icon_filter_calendar"
                                    app:tint="@color/colorPrimary"
                                    android:layout_margin="@dimen/margin"
                                    />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textSize="30sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/toContainer"
                            android:clickable="true"
                            android:layout_weight="1">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/rounded_filter"
                                android:backgroundTint="@color/white"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/editTo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black"
                                    android:textSize="16sp"
                                    android:background="@null"
                                    android:hint="@string/label_to"
                                    android:layout_gravity="center"
                                    android:focusableInTouchMode="false"
                                    android:layout_margin="@dimen/margin"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/icon2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:theme="@style/DateEditText"
                                    android:inputType="date"
                                    />

                                <ImageView
                                    android:id="@+id/icon2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:src="@drawable/icon_filter_calendar"
                                    app:tint="@color/colorPrimary"
                                    android:layout_margin="@dimen/margin"
                                    />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/labelTransactionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutDate"
                        android:text="@string/label_transaction_type"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/ss3bold"
                        android:textSize="18sp"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginTop="@dimen/margin_default"/>

                    <ImageView
                        android:id="@+id/arrowType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/labelTransactionType"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="@dimen/margin_default"
                        android:visibility="visible"
                        android:src="@drawable/icon_arrow"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutTransactionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_filter"
                        android:backgroundTint="@color/white"
                        android:visibility="visible"
                        android:layout_margin="@dimen/margin"
                        app:layout_constraintTop_toBottomOf="@id/labelTransactionType">

                        <RadioGroup
                            android:id="@+id/typeGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <RadioButton
                                android:id="@+id/radioBtnPos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="@dimen/margin_default"
                                android:buttonTint="@color/colorPrimary"
                                android:backgroundTint="@color/white"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/radio_button_pos"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>
                            <RadioButton
                                android:id="@+id/radioBtnIps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/radioBtnPos"
                                android:layout_marginStart="@dimen/margin_default"
                                android:layout_marginTop="@dimen/font_radio_margin_top_correction"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/radio_button_ips"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>
                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            app:layout_constraintTop_toBottomOf="@+id/typeGroup"
                            android:background="@color/text_black"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/filter_margin_end"
                            android:layout_marginStart="@dimen/margin_default"
                            android:layout_marginEnd="@dimen/margin_default"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/labelTransactionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutTransactionType"
                        android:text="@string/label_transaction_status_filter"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/ss3bold"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginTop="@dimen/margin_default"/>

                    <ImageView
                        android:id="@+id/arrowStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/labelTransactionStatus"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="@dimen/margin_default"
                        android:visibility="gone"
                        android:src="@drawable/icon_arrow"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutTransactionStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/rounded_filter"
                        android:layout_margin="@dimen/margin"
                        app:layout_constraintTop_toBottomOf="@id/labelTransactionStatus">

                        <RadioGroup
                            android:id="@+id/statusGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <RadioButton
                                android:id="@+id/radioBtnAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="@dimen/margin_default"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/radio_button_all"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>

                            <RadioButton
                                android:id="@+id/radioBtnAccepted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/radioBtnAll"
                                android:layout_marginStart="@dimen/margin_default"
                                android:layout_marginTop="@dimen/font_radio_margin_top_correction"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/transaction_status_accepted"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>

                            <RadioButton
                                android:id="@+id/radioBtnRejected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/radioBtnAccepted"
                                android:layout_marginStart="@dimen/margin_default"
                                android:layout_marginTop="@dimen/font_radio_margin_top_correction"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/transaction_status_rejected"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>

                            <RadioButton
                                android:id="@+id/radioBtnCanceled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/radioBtnRejected"
                                android:layout_marginStart="@dimen/margin_default"
                                android:layout_marginTop="@dimen/font_radio_margin_top_correction"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/transaction_status_canceled"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>
                        </RadioGroup>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/labelTransactionSort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutTransactionStatus"
                        android:text="@string/label_transaction_status_sort"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/ss3bold"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginTop="@dimen/margin_default"/>

                    <ImageView
                        android:id="@+id/arrowSort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/labelTransactionSort"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="@dimen/margin_default"
                        android:visibility="gone"
                        android:src="@drawable/icon_arrow"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutTransactionSort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_filter"
                        android:layout_margin="@dimen/margin"
                        android:backgroundTint="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/labelTransactionSort">

                        <RadioGroup
                            android:id="@+id/sortGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <RadioButton
                                android:id="@+id/radioBtnDateDsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="@dimen/margin_default"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/radio_button_date_dsc"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>

                            <RadioButton
                                android:id="@+id/radioBtnDateAsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/radioBtnDateAsc"
                                android:layout_marginStart="@dimen/margin_default"
                                android:layout_marginTop="@dimen/font_radio_margin_top_correction"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/radio_button_date_asc"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>

                            <RadioButton
                                android:id="@+id/radioBtnAmountAsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/radioBtnDateDsc"
                                android:layout_marginStart="@dimen/margin_default"
                                android:layout_marginTop="@dimen/font_radio_margin_top_correction"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/radio_button_amount_asc"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>

                            <RadioButton
                                android:id="@+id/radioBtnAmountDsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/radioBtnAmountAsc"
                                android:layout_marginStart="@dimen/margin_default"
                                android:layout_marginTop="@dimen/font_radio_margin_top_correction"
                                android:buttonTint="@color/colorPrimary"
                                android:paddingTop="@dimen/radio_button_padding"
                                android:paddingLeft="@dimen/radio_button_padding_left"
                                android:text="@string/radio_button_amount_dsc"
                                android:textColor="@color/text_black"
                                android:fontFamily="@font/ss3regular"
                                android:textSize="18sp"/>

                        </RadioGroup>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/applyFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_marginEnd="@dimen/margin"
                        android:layout_marginTop="@dimen/margin_big"
                        android:padding="@dimen/margin"
                        android:text="@string/button_apply_filters"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/margin_big"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutTransactionSort"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/cocobold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        style="@style/CustomButtonOrangeNoHeight"/>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>