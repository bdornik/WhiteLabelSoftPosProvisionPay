<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/backgroundAmount">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/backgroundAmount"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.AmountActivity">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_back"
                app:tint="@color/colorPrimary"
                android:tint="@color/colorPrimary"
                android:backgroundTint="@color/backgroundAmount"
                app:fabCustomSize="45dp"
                app:maxImageSize="16dp"
                android:layout_marginStart="@dimen/margin_big"
                android:layout_marginTop="@dimen/margin"
                app:borderWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/labelAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ss3black"
                android:gravity="center_horizontal"
                android:text="@string/label_enter_tip_header"
                android:textColor="@color/global_grey"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/back"
                app:layout_constraintEnd_toStartOf="@id/menuButton"
                app:layout_constraintStart_toEndOf="@id/back"
                app:layout_constraintTop_toTopOf="@id/back" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                android:backgroundTint="@color/white"
                android:tint="@color/colorPrimary"
                app:borderWidth="0dp"
                android:visibility="invisible"
                app:fabCustomSize="45dp"
                app:layout_constraintBottom_toBottomOf="@id/back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/back"
                app:maxImageSize="16dp"
                app:srcCompat="@drawable/icon_menu_dark"
                app:tint="@color/colorPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/amountLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/margin_pin"
            android:background="@drawable/bg_amount_box"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelPaymentType">

            <TextView
                android:id="@+id/topLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="@font/ss3regular"
                android:text="@string/hint_amount"
                android:textColor="@color/global_grey"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/amountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/ss3bold"
                android:backgroundTint="@color/transparent"
                android:textColor="@color/text_black"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topLabel" />

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ss3regular"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
        <!-- Tip selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/label_tip_method"
            android:fontFamily="@font/ss3bold"
            android:textSize="@dimen/suffix_text_size"
            android:textColor="@color/text_black"
            android:gravity="center"/>

        <!-- GridLayout for percentage buttons -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:columnCount="2"
            android:rowCount="2">


            <!-- 3% Button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button1"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onTipButtonClick"
                    android:text="5%"
                    app:cornerRadius="20dp"
                    android:fontFamily="@font/ss3bold"
                    android:textSize="@dimen/suffix_text_size"
                    android:textColor="@color/text_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/button_border_selector"
                    android:stateListAnimator="@null"
                    app:strokeWidth="2dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button1Icon"
                    android:layout_width="30dp"
                    android:translationY="-6dp"
                    android:translationX="6dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:maxImageSize="20dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fabCustomSize="30dp"
                    style="@style/MyFabStyle"
                    app:tint="#FFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 5% Button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onTipButtonClick"
                    android:text="10%"
                    android:fontFamily="@font/ss3bold"
                    android:textSize="@dimen/suffix_text_size"

                    android:textColor="@color/text_black"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/button_border_selector"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button2Icon"
                    android:layout_width="30dp"
                    android:translationY="-6dp"
                    android:translationX="6dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:maxImageSize="20dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fabCustomSize="30dp"
                    style="@style/MyFabStyle"
                    app:tint="#FFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onTipButtonClick"
                    android:text="15%"
                    android:textStyle="bold"
                    android:fontFamily="@font/ss3bold"
                    android:textSize="@dimen/suffix_text_size"
                    android:textColor="@color/text_black"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/button_border_selector"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button3Icon"
                    android:layout_width="30dp"
                    android:translationY="-6dp"
                    android:translationX="6dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:maxImageSize="20dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fabCustomSize="30dp"
                    style="@style/MyFabStyle"
                    app:tint="#FFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button4"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onTipButtonClick"
                    android:text="20%"
                    android:fontFamily="@font/ss3bold"
                    android:textSize="@dimen/suffix_text_size"
                    android:textColor="@color/text_black"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/button_border_selector"
                    app:strokeWidth="2dp"
                    android:stateListAnimator="@null"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button4Icon"
                    android:layout_width="30dp"
                    android:translationY="-6dp"
                    android:translationX="6dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:maxImageSize="20dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fabCustomSize="30dp"
                    style="@style/MyFabStyle"
                    app:tint="#FFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addCustomAmountButton"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onTipButtonClick"
                    android:text="@string/custom_tip"
                    android:fontFamily="@font/ss3bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/button_border_selector"
                    app:strokeWidth="2dp"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addCustomAmountButtonIcon"
                    android:layout_width="30dp"
                    android:translationY="-6dp"
                    android:translationX="6dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:maxImageSize="20dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fabCustomSize="30dp"
                    style="@style/MyFabStyle"
                    app:tint="#FFF" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/removeCustomAmount"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onTipButtonClick"
                    android:text="@string/remove_tip"
                    android:fontFamily="@font/ss3bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/button_border_selector"
                    app:strokeWidth="2dp"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/removeCustomAmountIcon"
                    android:layout_width="30dp"
                    android:translationY="-6dp"
                    android:translationX="6dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:borderWidth="0dp"
                    app:maxImageSize="20dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fabCustomSize="30dp"
                    style="@style/MyFabStyle"
                    app:tint="#FFF" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </GridLayout>

        <!-- Add Custom Amount Button -->

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceed"
            style="@style/CustomButtonOrangeNoHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_amount_top"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin"
            android:fontFamily="@font/ss3bold"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin"
            android:text="@string/enter_pin_ok"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>
</ScrollView>
