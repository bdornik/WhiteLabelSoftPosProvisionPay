                        android:layout_height="@dimen/line_height"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginTop="@dimen/line_margin_top"
                        android:layout_marginEnd="@dimen/margin_default"
                        android:background="@color/bill_line"
                        app:layout_constraintTop_toBottomOf="@+id/message" />

                    <TextView
                        android:id="@+id/aidLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_marginTop="@dimen/line_margin_top"
                        android:fontFamily="@font/ss3regular"
                        android:text="@string/label_transaction_aid"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line10" />

                    <TextView
                        android:id="@+id/aid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/line_margin_top"
                        android:layout_marginEnd="@dimen/margin_default"
                        android:fontFamily="@font/ss3bold"
                        android:text="000 Approved"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/label_transaction_bill"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line10" />

                    <ImageView
                        android:id="@+id/mcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/line_margin_top"
                        android:src="@drawable/icon_mastercard"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/aid" />

                    <ImageView
                        android:id="@+id/visa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/line_margin_top"
                        android:src="@drawable/icon_visa"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/aid" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/imageBottom"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bill_bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/slipBody" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
