<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundAmount"
        tools:context=".activities.PinActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_back"
            app:tint="@color/colorPrimary"
            android:tint="@color/colorPrimary"
            android:backgroundTint="@color/white"
            app:fabCustomSize="45dp"
            app:maxImageSize="16dp"
            android:visibility="invisible"
            android:layout_marginStart="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin"
            app:borderWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/labelRegistration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/back"
            android:text="@string/label_registration"
            android:fontFamily="@font/ss3black"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textColor="@color/global_grey"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




        <LinearLayout
            android:id="@+id/pinContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labelRegistration"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/logoContainer"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_header"
                    android:visibility="visible"
                    android:layout_margin="@dimen/margin"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <View
                android:id="@+id/health_check_led"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="@dimen/margin_big"
                android:layout_marginTop="@dimen/margin"
                android:background="@drawable/circle_red"
                android:layout_gravity="right"/>

            <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ss3bold"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


            <LinearLayout
                android:id="@+id/pinView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:gravity="center"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toTopOf="@id/messageTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_circle"
                    android:src="@drawable/circle_grey"
                    />
                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_circle"
                    android:src="@drawable/circle_grey"
                    />
                <ImageView
                    android:id="@+id/circle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_circle"
                    android:src="@drawable/circle_grey"
                    />
                <ImageView
                    android:id="@+id/circle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_circle"
                    android:src="@drawable/circle_grey"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_gravity="center" />


        </LinearLayout>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/labelForgot"
            style="@style/CustomButtonPinOrangeNoHeight"
            android:layout_marginTop="@dimen/margin_amount_top"
            android:fontFamily="@font/ss3bold"
            android:textColor="@color/buttonGreen"
            android:text="@string/forgot_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <!--TextView
            android:id="@+id/labelForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_pin"
            android:fontFamily="@font/ss3regular"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:textColor="@color/bigLabelBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>