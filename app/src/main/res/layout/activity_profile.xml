<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundAmount"
        tools:context=".activities.ProfileActivity">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_close"
            app:tint="@color/colorPrimary"
            android:tint="@color/colorPrimary"
            android:backgroundTint="@color/backgroundAmount"
            app:fabCustomSize="45dp"
            app:maxImageSize="16dp"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin_big"
            app:borderWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/labelDm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/closeButton"
            android:layout_marginTop="@dimen/margin_amount_top"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:textColor="@color/text_black"
            android:fontFamily="@font/ss3black"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/labelAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/labelDm"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:textColor="@color/global_grey"
            android:fontFamily="@font/ss3regular"
            android:layout_marginEnd="@dimen/margin_default"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/labelMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/labelAddress"
            android:layout_marginStart="@dimen/margin_default"
            android:text="@string/label_mail"
            android:textColor="@color/white"
            android:visibility="gone"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="@dimen/font_label_address_mail"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:layout_constraintTop_toBottomOf="@+id/labelMail"
            android:layout_margin="@dimen/margin_default"
            android:background="@color/greyLine"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTraffic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            android:layout_margin="@dimen/margin_default">
            <ImageView
                android:id="@+id/iconTraffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icon_traffic"/>

            <TextView
                android:id="@+id/traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/iconTraffic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_default"
                android:text="@string/label_traffic"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/ss3bold"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/arrowPin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icon_arrow_right" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:layout_constraintTop_toBottomOf="@+id/layoutTraffic"
            android:layout_margin="@dimen/margin_default"
            android:background="@color/greyLine"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            android:layout_margin="@dimen/margin_default">
            <ImageView
                android:id="@+id/iconSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icon_settings"/>

            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/iconSettings"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_default"
                android:text="@string/label_settings"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/ss3bold"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/arrowPin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icon_arrow_right" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:layout_constraintTop_toBottomOf="@+id/layoutSettings"
            android:layout_margin="@dimen/margin_default"
            android:background="@color/greyLine"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutEndOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line4"
            android:layout_margin="@dimen/margin_default">
            <ImageView
                android:id="@+id/iconEndOfDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icon_end_of_day"/>

            <TextView
                android:id="@+id/endOfDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/iconEndOfDay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_default"
                android:text="@string/label_end_of_day"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/ss3bold"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/arrowPin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icon_arrow_right" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:layout_constraintTop_toBottomOf="@+id/layoutEndOfDay"
            android:layout_margin="@dimen/margin_default"
            android:background="@color/greyLine"/>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/signOut"
            style="@style/CustomButtonOrangeNoHeight"
            android:layout_marginTop="@dimen/margin_amount_top"
            android:fontFamily="@font/ss3bold"
            android:text="@string/button_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>