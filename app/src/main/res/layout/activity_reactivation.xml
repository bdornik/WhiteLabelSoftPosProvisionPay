<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundAmount"
        tools:context=".activities.ReactivationActivity">


        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinner"
            style="@style/SpinKitView.Small.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:SpinKit_Color="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/spinnerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin"
                android:fontFamily="@font/cocobold"
                android:text="@string/provision_label"
                android:textAlignment="center"
                android:textColor="@color/global_grey"
                android:textSize="@dimen/font_size_label_pin" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cocoregular"
                android:text="@string/processing_label_wait"
                android:textAlignment="center"
                android:textColor="@color/global_grey"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ledIndicators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_pin"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/spinnerLayout">

            <View
                android:id="@+id/visual_indicator_led_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circle_grey" />

            <View
                android:id="@+id/visual_indicator_led_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circle_grey" />

            <View
                android:id="@+id/visual_indicator_led_3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circle_grey" />

            <View
                android:id="@+id/visual_indicator_led_4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circle_grey" />
            <View
                android:id="@+id/visual_indicator_led_5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_grey" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>