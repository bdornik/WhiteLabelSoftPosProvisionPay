<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edittext"
    android:layout_margin="@dimen/margin_default">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/transaction_dialog_margin"
                android:contentDescription="@string/transaction_canceled_successful"
                android:src="@drawable/icon_warning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/warningLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/transaction_dialog_margin"
                android:layout_marginTop="@dimen/transaction_dialog_margin"
                android:layout_marginEnd="@dimen/transaction_dialog_margin"
                android:fontFamily="@font/ss3regular"
                android:textAlignment="center"
                android:textColor="@color/global_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon"
                tools:text="123" />

            <TextView
                android:id="@+id/warningLabelQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/transaction_dialog_margin"
                android:layout_marginEnd="@dimen/transaction_dialog_margin"
                android:fontFamily="@font/ss3regular"
                android:textAlignment="center"
                android:textColor="@color/global_grey"
                tools:text="123"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/warningLabel" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnYes"
                style="@style/CustomButtonOrangeNoHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/transaction_dialog_margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginEnd="@dimen/transaction_dialog_margin"
                android:layout_marginBottom="@dimen/margin_default"
                android:fontFamily="@font/cocobold"
                android:paddingTop="@dimen/transaction_padding"
                android:paddingBottom="@dimen/transaction_padding"
                android:text="@string/label_yes"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/warningLabelQuestion" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNo"
                style="@style/ButtonTransaction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/transaction_dialog_margin"
                android:layout_marginEnd="@dimen/transaction_dialog_margin"
                android:layout_marginBottom="@dimen/transaction_dialog_margin_top"
                android:fontFamily="@font/cocobold"
                android:paddingTop="@dimen/transaction_padding"
                android:paddingBottom="@dimen/transaction_padding"
                android:text="@string/label_no"
                android:textAllCaps="false"
                android:textColor="@color/buttonGreen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnYes" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>